{
  "name": "nestjs-template",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "pack": "npm run build && cp -a dist/ app",
    "pack:prod": "npm run pack && docker-compose build",
    "publish": "npm run pack:prod && docker-compose push",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "watch": "ts-node-dev -r tsconfig-paths/register src/main.ts --watch",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:typeorm": "npx nodemon -w ./src -e ts node_modules/.bin/ts-node src/main.ts",
    "db:sync": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js schema:sync -f=ormconfig.ts",
    "db:drop": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js schema:drop -f=ormconfig.ts",
    "db:seeds": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:run -f=ormconfig.ts",
    "db:prepare": "npm run db:drop && npm run db:sync && npm run db:seeds",
    "ri": "rm -rf node_modules/@avidi package-lock.json && npm i"
  },
  "dependencies": {
    "nest-utils": "github:Nailzk/nest-utils",
    "@nestjs/common": "8.1.2",
    "@nestjs/core": "8.1.2",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/passport": "8.2.2",
    "@nestjs/platform-express": "8.1.2",
    "@nestjs/swagger": "5.1.4",
    "@nestjs/typeorm": "8.0.2",
    "@nestjsx/crud": "5.0.0-alpha.3",
    "@nestjsx/crud-typeorm": "5.0.0-alpha.3",
    "@types/express": "4.17.13",
    "bcrypt": "5.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cookie-parser": "1.4.5",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "pg": "8.7.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.4.0",
    "sqlite3": "5.0.2",
    "swagger-ui-express": "4.1.6",
    "typeorm": "0.2.38",
    "typeorm-naming-strategies": "2.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "8.1.2",
    "@nuxtjs/opencollective": "0.3.2",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.6",
    "@types/passport-jwt": "3.0.6",
    "@types/qs": "6.9.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "commitizen": "4.2.4",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.1.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-diff": "27.3.1",
    "jest-extended": "1.1.0",
    "lerna": "4.0.0",
    "nodemon": "2.0.14",
    "npm-check": "5.9.2",
    "nps": "5.10.0",
    "nps-utils": "1.7.0",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "qs": "6.10.1",
    "redis": "3.1.2",
    "rimraf": "3.0.2",
    "sqlite3": "5.0.2",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-extends": "1.0.1",
    "tsconfig-paths": "3.11.0",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.4.4",
    "validate-commit-msg": "2.14.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "core$": "<rootDir>/core/index"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
