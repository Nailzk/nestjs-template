{
  "name": "nestjs-template",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "pack": "npm run build && cp -a dist/ app",
    "pack:prod": "npm run pack && docker-compose build",
    "publish": "npm run pack:prod && docker-compose push",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "watch": "ts-node-dev -r tsconfig-paths/register src/main.ts --watch",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:typeorm": "npx nodemon -w ./src -e ts node_modules/.bin/ts-node src/main.ts",
    "db:sync": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js schema:sync -f=ormconfig.ts",
    "db:drop": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js schema:drop -f=ormconfig.ts",
    "db:seeds": "cd src && npx ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js migration:run -f=ormconfig.ts",
    "db:prepare": "npm run db:drop && npm run db:sync && npm run db:seeds",
    "ri": "rm -rf node_modules/@avidi package-lock.json && npm i"
  },
  "dependencies": {
    "@nestjs/common": "6.11.5",
    "@nestjs/core": "6.11.5",
    "@nestjs/jwt": "8.0.0",
    "@nestjs/platform-express": "6.11.5",
    "@nestjs/swagger": "4.0.9",
    "@nestjs/typeorm": "6.2.0",
    "@nestjsx/crud": "4.4.1",
    "@nestjsx/crud-typeorm": "4.4.1",
    "@types/express": "4.17.6",
    "class-transformer": "0.2.3",
    "class-validator": "0.10.0",
    "cookie-parser": "1.4.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "pg": "7.12.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.1",
    "rxjs": "6.5.4",
    "sqlite3": "4.1.1",
    "swagger-ui-express": "4.1.0",
    "typeorm": "0.2.19",
    "typeorm-naming-strategies": "1.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "6.10.10",
    "@nuxtjs/opencollective": "0.2.2",
    "@types/cookie-parser": "1.4.2",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/qs": "6.5.3",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "commitizen": "4.0.3",
    "coveralls": "3.0.6",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "8.1.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "jest-diff": "25.2.1",
    "jest-extended": "0.11.2",
    "lerna": "3.16.4",
    "nodemon": "1.19.2",
    "npm-check": "5.9.0",
    "nps": "5.9.8",
    "nps-utils": "1.7.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "qs": "6.8.0",
    "redis": "2.8.0",
    "rimraf": "3.0.1",
    "sqlite3": "4.1.1",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.3.0",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-extends": "1.0.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.5",
    "validate-commit-msg": "2.14.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "core$": "<rootDir>/core/index"
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
